                android:id="@+id/epoint"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/gradeinboxmarginleft"
                android:layout_marginTop="@dimen/gradeinboxmarginleft"
                android:layout_marginRight="@dimen/gradeinboxmarginright"
                android:background="@drawable/number_border"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text=""
                android:hint="@string/GradePoint"
