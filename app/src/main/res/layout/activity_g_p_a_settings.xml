    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:textAlignment="center">

        <include layout="@layout/back_nav_bar"/>

        <TextView
            android:id="@+id/gradespointaddTitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/gradepointschangestitle"
            android:textColor="@color/mainColor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gradeinboxmarginright"
                android:gravity="center"
                android:text="@string/aplusgrade"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/gradetextsize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/apluspoint"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/gradeinboxmarginleft"
                android:layout_marginRight="@dimen/gradeinboxmarginright"
                android:background="@drawable/number_border"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text=""
                android:hint="@string/GradePoint"
                android:textColorHint="@color/inboxcolor"
                android:textColor="@color/inboxcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gradeinboxmarginright"
                android:layout_marginTop="@dimen/gradeinboxmarginleft"
                android:gravity="center"
                android:text="A   Grade"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/gradetextsize"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/apoint"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/gradeinboxmarginleft"
                android:layout_marginTop="@dimen/gradeinboxmarginleft"
                android:layout_marginRight="@dimen/gradeinboxmarginright"
                android:background="@drawable/number_border"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:text=""
